{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2018", "dom"],
    "paths": {
      "@spica-server/*": [
        "./packages/*",
        "./stacks/api/*"
      ],
      "@spica/*": [
        "./stacks/*"
      ]
    }
  },
  "exclude": ["dist", "bazel-*"]
}
