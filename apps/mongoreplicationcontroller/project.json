{
  "name": "mongoreplicationcontroller",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mongoreplicationcontroller/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "mongoreplicationcontroller:build"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "inputs": [
        "{workspaceRoot}/tsconfig.json",
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/project.json"
      ],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/mongoreplicationcontroller",
        "main": "apps/mongoreplicationcontroller/src/main.ts",
        "tsConfig": "apps/mongoreplicationcontroller/tsconfig.json"
      },
      "cache": true
    },
    "build-image": {
      "inputs": [
        "{workspaceRoot}/tsconfig.json",
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/project.json",
        "{projectRoot}/Dockerfile"
      ],
      "command": "docker build --platform=linux/amd64 . -f ./apps/mongoreplicationcontroller/Dockerfile -t spicaengine/mongoreplicationcontroller:latest",
      "cache": false
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker login -u {args.username} -p {args.password}",
          "docker push spicaengine/mongoreplicationcontroller:latest"
        ],
        "parallel": false,
        "forwardAllArgs": false
      }
    }
  }
}
