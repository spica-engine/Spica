{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "dependsOn": ["build-dev"],
      "options": {
        "buildTarget": "api:build-dev",
        "buildTargetOptions": {
          "outputPath": "dist/apps/api/src",
          "outputFileName": "main.js"
        }
      }
    },
    "build-dev": {
      "dependsOn": ["transform-paths", "build-assets", "build-workers"]
    },
    "build-assets": {
      "dependsOn": ["api/bucket/expression:build-assets"]
    },
    "transform-paths": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "resolve-tspaths"
      }
    },
    "build-workers": {
      "command": "rollup -c './apps/api/src/function/runtime/node/bootstrap/rollup.config.js' --bundleConfigAsCjs",
      "cache": true
    }
  }
}
