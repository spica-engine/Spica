{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "dependsOn": ["build-workers", "transform-paths", "*:build-assets"],
      "options": {
        "buildTarget": "api:build",
        "buildTargetOptions": {
          "outputPath": "dist/apps/api/src",
          "outputFileName": "main.js"
        }
      }
    },
    "transform-paths": {
      "executor": "nx:run-commands",
      "options": {
        "command": "resolve-tspaths"
      }
    },
    "build-workers": {
      "command": "rollup -c './apps/api/src/function/runtime/node/bootstrap/rollup.config.js' --bundleConfigAsCjs",
      "cache": true
    }
  }
}
