{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "rootDir": ".",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2018", "dom"]
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
