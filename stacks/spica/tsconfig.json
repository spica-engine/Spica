{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "baseUrl": "./",
    "lib": ["es2018", "dom"],
    "paths": {
      "@spica-client/*": [
        "./packages/*",
        "./src/*", 
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test.ts", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true
  }
}