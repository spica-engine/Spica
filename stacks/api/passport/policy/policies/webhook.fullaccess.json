{
  "$schema": "http://spica.internal/passport/policy",
  "_id": "WebhookFullAccess",
  "name": "Webhook Full Access",
  "description": "Full acess to webhook service",
  "statement": [
    {
      "action": "webhook:index",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "webhook"
    },
    {
      "action": "webhook:show",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "webhook"
    },
    {
      "action": "webhook:create",
      "resource": [],
      "module": "webhook"
    },
    {
      "action": "webhook:update",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "webhook"
    },
    {
      "action": "webhook:delete",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "webhook"
    },
    {
      "action": "webhook:logs:index",
      "resource": [],
      "module": "webhook:logs"
    },
    {
      "action": "webhook:logs:delete",
      "resource": [],
      "module": "webhook:logs"
    }
  ]
}
