{
  "$schema": "http://spica.internal/passport/policy",
  "_id": "StorageFullAccess",
  "name": "Storage Full Access",
  "description": "Full access to storage service.",
  "statement": [
    {
      "action": "storage:index",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "storage"
    },
    {
      "action": "storage:show",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "storage"
    },
    {
      "action": "storage:create",
      "resource": [],
      "module": "storage"
    },
    {
      "action": "storage:update",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "storage"
    },
    {
      "action": "storage:delete",
      "resource": {
        "include": "*",
        "exclude": []
      },
      "module": "storage"
    }
  ]
}
