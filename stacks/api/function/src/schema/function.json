{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/function/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["description", "name", "triggers"],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "env": {
      "type": "object",
      "patternProperties": {
        ".": {"type": "string"}
      }
    },
    "memoryLimit": {
      "type": "number",
      "default": 100
    },
    "timeout": {
      "type": "number"
    },
    "triggers": true
  }
}
