package(default_visibility = ["//visibility:public"])

load("@npm_bazel_typescript//:index.bzl", "ts_library")
load("@npm_bazel_jasmine//:index.bzl", "jasmine_node_test")

ts_library(
    name = "pull_test_lib",
    testonly = True,
    srcs = [
        "pull.spec.ts",
    ],
    deps = [
        "//stacks/cli",
        "@npm//@ionic/cli-framework",
        "@npm//@types/jasmine",
        "@npm//@types/node",
        "@npm//ora",
    ],
)

jasmine_node_test(
    name = "pull_test",
    srcs = [":pull_test_lib"],
)

ts_library(
    name = "push_test_lib",
    testonly = True,
    srcs = [
        "push.spec.ts",
    ],
    deps = [
        "//stacks/cli",
        "@npm//@ionic/cli-framework",
        "@npm//@types/jasmine",
        "@npm//@types/node",
        "@npm//ora",
    ],
)

jasmine_node_test(
    name = "push_test",
    srcs = [":push_test_lib"],
)

ts_library(
    name = "test_lib",
    testonly = True,
    srcs = glob(
        include = [
            "**/*.ts",
        ],
        exclude = [
            "pull.spec.ts",
            "push.spec.ts",
        ],
    ),
    deps = [
        "//stacks/cli",
        "@npm//@ionic/cli-framework",
        "@npm//@types/jasmine",
        "@npm//@types/node",
    ],
)

jasmine_node_test(
    name = "test",
    srcs = [":test_lib"],
)
